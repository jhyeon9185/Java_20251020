package test;

public class Sample {

	public static void main(String[] args) {
		
		System.out.println("Hello, JAVA" );
		System.out.println("Hello, JAVA");
		
		// 아스키 코드, 유니코드 0X, 0B
		char var1 = 'A';
		char c1 = 97;
		
		char var2 = '가';
//		char c2 = 44032;
		char c2 = 0xAC63;
		// char = 문자 1개만 가능
		
		System.out.println(var1);
		System.out.println(c1);
		
		System.out.println(var2);
		System.out.println(c2);
		
		//실수 float = 4byte, double = 8byte => float 사용 할 때 '실수 값 + f, l'
		float f1 = 10.5f;
		double d1 = 10.5;
		
		System.out.println(f1);
		System.out.println(d1);
		
		float f2 = 2147483648l;
		float f3 = 2147483658l;
		float f4 = 2147483668f;
	
		System.out.println(f2);
		System.out.println(f3);
		System.out.println(f4);
		
		//2.1474836E9 => 2.14748369 * 10  
		
		//String -> class 객체 (앞 글자가 대문자)
		String str1 = "백\t종현";
		String str2 = "홍\n길\n동";
		
		System.out.println(str1);
		System.out.println(str2);
		
		//자동 형변환
		int intA = 10;
		byte byteB = 20;
		
		intA = byteB;
		
		System.out.println(intA);
		System.out.println(byteB);
		
		//강제 형변환
		byteB = (byte)intA;
		System.out.println("강제 형 변환---------");
		
		System.out.println(intA);
		System.out.println(byteB);
		
		
		System.out.println("실수형 변환---------");
		
		double dNum = 10.5;
		int iNum = 10;
		dNum = iNum; // 자동 형변환 dNum = (double)iNum -> dNum = 10.0
		
	}

}
